<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 顏色定義 -->
    <SolidColorBrush x:Key="Background"
                     Color="#3C3C3C" />
    <SolidColorBrush x:Key="TextColor"
                     Color="#C3C3C3" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush"
                     Color="#6F00D2" />
    <SolidColorBrush x:Key="ButtonTextBrush"
                     Color="#FFFFFF" />
    <SolidColorBrush x:Key="PanelBackgroundBrush"
                     Color="#3C3C3C" />
    <SolidColorBrush x:Key="TextColor2"
                     Color="#C3C3C3" />

    <!-- DockPanel 樣式 
    <Style TargetType="DockPanel">
        <Setter Property="Background"
                Value="{DynamicResource Background}" />
    </Style-->

</ResourceDictionary>