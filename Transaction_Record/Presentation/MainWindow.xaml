<Window x:Class="Transaction_Record.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transaction_Record.Presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="財務管理系統"
        Height="450"
        Width="800">

    <DockPanel Background="{DynamicResource PanelBackgroundBrush}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 新增交易區域 -->
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="TypeComboBox"
                          Width="100"
                          Margin="5"
                          Foreground="{DynamicResource TextColor}"
                          IsEditable="False">
                    <ComboBoxItem Content="收入"
                                  Background="{DynamicResource Background}"
                                  IsSelected="True" />
                    <ComboBoxItem Content="支出"
                                  Background="{DynamicResource Background}" />
                </ComboBox>
                <TextBox x:Name="CategoryTextBox"
                         Width="150"
                         Margin="5"
                         materialDesign:HintAssist.Hint="類別"
                         Foreground="{DynamicResource TextColor}"
                         BorderBrush="{DynamicResource TextColor}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox x:Name="AmountTextBox"
                         Width="100"
                         Margin="5"
                         materialDesign:HintAssist.Hint="金額"
                         Foreground="{DynamicResource TextColor}"
                         BorderBrush="{DynamicResource TextColor}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <DatePicker x:Name="DatePicker"
                            Width="150"
                            Margin="5"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="日期"
                            Background="{DynamicResource DatePickerBackground}"
                            Foreground="{DynamicResource TextColor}"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />                
                <Button Content="新增交易"
                        Width="100"
                        Margin="5"
                        Background="{DynamicResource ButtonBackgroundBrush}"
                        Foreground="{DynamicResource TextColor}"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        ToolTip="新增交易"
                        Click="AddTransaction_Click" />
            </StackPanel>
            
            <!-- 交易列表與統計 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>

                <!-- 交易清單 -->
                <DataGrid x:Name="TransactionGrid"
                          Grid.Column="0"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Margin="5"
                          Background="{DynamicResource Background}"
                          BorderBrush="{DynamicResource TextColor}"
                          Foreground="{DynamicResource TextColor}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding Id}"
                                            Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin"
                                            Value="5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="類別"
                                            Binding="{Binding Category}"
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin"
                                            Value="5" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="金額"
                                            Binding="{Binding Amount}"
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin"
                                            Value="5" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="類型"
                                            Binding="{Binding Type}"
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin"
                                            Value="5" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="日期"
                                            Binding="{Binding Date, StringFormat=yyyy-MM-dd}"
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin"
                                            Value="5" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 統計與刪除 -->
                <StackPanel Grid.Column="1"
                            Margin="10">
                    <TextBlock Text="總收入："
                               Margin="0,0,10,0"
                               Foreground="{DynamicResource TextColor}" />
                    <TextBlock x:Name="TotalIncome"
                               Margin="1"
                               Foreground="{DynamicResource TextColor}" />
                    <TextBlock Text="總支出："
                               Margin="0,10,10,0"
                               Foreground="{DynamicResource TextColor}" />
                    <TextBlock x:Name="TotalExpense"
                               Text="0"
                               Margin="1"
                               Foreground="{DynamicResource TextColor}" />
                    <TextBlock Text="總計："
                               FontWeight="Bold"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextColor}" />
                    <TextBlock x:Name="ProfitAndLoss"
                               Margin="1"
                               Foreground="{DynamicResource TextColor}" />
                    <Button Content="刪除交易"
                            Width="150"
                            Margin="0,20,0,0"
                            Background="{DynamicResource ButtonBackgroundBrush}"
                            Foreground="{DynamicResource TextColor}"
                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            ToolTip="刪除交易"
                            Click="DeleteTransaction_Click" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="淺色"
                               Margin="5"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextColor}" />
                    <ToggleButton x:Name="ThemeChange"
                                  Width="30"
                                  Height="22"
                                  ToolTip="Default ToggleButton Style"
                                  Checked="ThemeChange_Checked"
                                  Unchecked="ThemeChange_Unchecked"
                                  Background="{DynamicResource ButtonBackgroundBrush}" />
                    <TextBlock Text="深色"
                               Margin="5"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextColor}" />

                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
